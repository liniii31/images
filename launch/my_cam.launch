<launch>
	<group ns = "camera">
    	<node pkg="libuvc_camera" type="camera_node" name="mycam">
    		<!-- Parameters used to find the camera -->
            <param name="vendor" value="0x1bcf"/>
        	<param name="product" value="0x2b90"/>
        	<!-- If the above parameters aren't unique, choose the first match: -->
        	<param name="index" value="0"/>
        	<!-- Image size and type -->
        	<param name="width" value="1280"/>
        	<param name="height" value="720"/>
        	<param name="video_mode" value="mjpeg"/> <!-- uncompressed/yuyv/nv12/jpeg -->
        	<param name="camera_info_url" value="file:///home/shalini/.ros/camera_info/camera.yaml"/>
        	<param name="frame_rate" value="30"/>
        	
  		</node>
    </group>
    <node pkg="images" type="sync.py" name="sync" output="screen"/>
    <node pkg="images" name="image" type="digits.py" output="screen" >
    	<param name="path" type="string" value="$(find images)/nodes/mnist2.pt" />
        <param name="image_topic" type="string" value="camera_crop/image_mono" />
    </node>
    <node name="image_proc" pkg="image_proc" type="image_proc" ns="camera"/>
    <node pkg="nodelet" type="nodelet" args="standalone image_proc/crop_decimate" name="crop_image">
    	<param name="x_offset" type="int" value="0" />
        <param name="y_offset" type="int" value="0" />
    	<param name="width" type="int" value="300" />
    	<param name="height" type="int" value="300" />
    	<remap from="camera/image_raw" to="/camera/image_mono"/>
    	<remap from="camera/image_info" to="/camera/camera_info"/>
    	<remap from="camera_out/image_raw" to="camera_crop/image_mono"/>
    	<remap from="camera_out/image_info" to="camera_crop/camera_info"/>
    </node>
    <node pkg="rviz" name="rviz" type="rviz"/>  

   
</launch>

